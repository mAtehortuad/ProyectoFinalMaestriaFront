# Configuración del Sistema de Gestión de Biblioteca
# Proyecto Final de Maestría

# URL base de la API (Mockoon por defecto)
VITE_API_BASE_URL=http://localhost:3001

# Clave de encriptación para datos sensibles
# IMPORTANTE: Cambiar en producción por una clave segura
VITE_ENCRYPTION_KEY=biblioteca-maestria-2024-secure-key

# Configuración de desarrollo
NODE_ENV=development

# Configuración de la aplicación
VITE_APP_NAME=Sistema de Gestión de Biblioteca
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de gestión de préstamos e inventario de libros

# Configuración de seguridad
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_SESSION_TIMEOUT=3600000

# Configuración de logs
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG=true

# Configuración de caché
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=300000

# Configuración de paginación
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Configuración de notificaciones
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=5000

# Configuración de validación
VITE_ENABLE_FORM_VALIDATION=true
VITE_MAX_FILE_SIZE=5242880

# Configuración de reportes
VITE_ENABLE_REPORTS=true
VITE_REPORT_FORMAT=pdf

# Configuración de backup
VITE_ENABLE_AUTO_BACKUP=false
VITE_BACKUP_INTERVAL=86400000 